@using Microsoft.AspNetCore.Http


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - TheDarkTowerMVC</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/TheDarkTowerMVC.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/layout.css" />
</head>
<body>
    <header id="header-bar">
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light mb-3 border-bottom">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index"><img src="~/css/images/Title.png" height="65" width="200"></a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    @* <ul class="navbar-nav flex-grow-1">*@
                    @{
                        if (Context.Session.GetString("userid") != "" && Context.Session.GetString("userid") != null)
                        {
                            <div class="btn-div">

                                <button class="list-btn account-btn" onclick="window.location.href='https://localhost:7148/user/account'">Account</button>

                                <button class="list-btn inbox-btn" onclick="window.location.href='https://localhost:7148/user/inbox'">Inbox</button>

                                <button class="list-btn friends-btn" onclick="window.location.href='https://localhost:7148/user/friendlist'">Friend List</button>

                                <button class="list-btn logout-btn" onclick="window.location.href='https://localhost:7148/user/logout'">Log out</button>
                            </div>
                        }
                        else
                        {

                        }
                    }


                    @*</ul>*@
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
